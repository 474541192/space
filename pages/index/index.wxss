/**index.wxss**/

/* app */
.container
{
  width: 750rpx;
  background-color: rgb(243, 241, 239);
}


/* 顶部搜索栏 */
.searchBar
{
  width: 100%;
  height: 44px;
  background-color: lightgray;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.search_container
{
  width: 90%;
  height: 80%;
  background-color: white;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}


.search_icon
{
  width: 12%;
  height: 100%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  /* background-color: red; */
}

.search_img
{
  width: 20px;
  height: 20px;
}
.search_input
{
  width: 88%;
  height: 100%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  /* background-color: yellow; */
}

.search_input_input
{
  width: 100%;
  height: 100%;
}



/* 滚动条 总属性 */

.scroll-view_H{
  white-space: nowrap;
}
/* 滚动条 总item属性 */
/* .scroll-view-item_H{
  display: inline-flex;
  justify-content: center;
  align-items: center;
} */


/* 滚动条1 */
.tabList
{
  width: 100%;
  height: 40px;
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  
}

.tabList_item
{
  padding: 0 5px 0;
  margin-left: 10px;
  margin-right: 10px;
  height: 100%;
  font-size: 14px;
  font-weight: 500;
  display: inline-flex; 
  justify-content: center;
  align-items: center;
}


/* 轮播图 */
.swiper
{
  height: 200px;
}

.wx-swiper-dot
{
  width: 20px;
  height: 5px;
  background-color: white;
}

.swiper_item_image
{
  width: 100%;
  height: 100%;
}


/* 菜单列表 */
.menu
{
  width: 750rpx;
  display: inline-flex;
  flex-wrap: wrap;
  background-color: white;
}
.menu_item
{
  width: 187.5rpx;
  height: 220rpx;
  overflow: hidden;
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}
.menu_item_image_container
{
  width: 131.25rpx;
  height: 131.25rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.menu_item_image
{
  width: 100%;
  height: 100%;
}

.menu_item_text
{
  width: 100%;
  height:40rpx ;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

/* 广告 */
.advertising
{
  width: 96%;
  height: 150px;
  border-radius: 5px;
  margin: 0 auto;
  overflow: hidden;
}

.advertising image
{
  width: 100%;
  height: 100%;
}

/* 商品列表的标题 */
.goods_title
{
  width: 100%;
  height: 60px;
  background-color:rgb(243, 241, 239);
  display: inline-flex;
  justify-content: center;
  align-items: center;
}


/* 新品推荐 */

.newGoods
{
  width: 96%;
  margin: 0 auto;
}
.newGoods_container
{
  height: 200px;
  /* background-color: red; */
}

.newGoods_item
{
  width: 100px;
  height: 100%;
  margin-right: 10px;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.newGoods_item_image
{
  width: 100%;
  height: 50%;
}

.newGoods_item_image image
{
  width: 100%;
  height: 100%;
}

.newGoods_item_intro
{
  width: 80%;
  height:30% ;
  display: inline-flex;
  align-items: center;
  flex-wrap: wrap;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  font-size: 12px;
}
.newGoods_item_price
{
  width: 80%;
  height:20% ;
  color:red
}



