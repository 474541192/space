}

.footer
{
  width: 96%;
  height: 150px;
  margin: 0 auto;
}

.shop_intro
{
  width: 100%;
  height: 50px;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  color: gray;
}

.line
{
  width: 35%;
